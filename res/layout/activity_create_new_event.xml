<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/createNewEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:layout_marginTop="@dimen/btn_margin_vertical"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:paddingTop="@dimen/activity_padding_vertical"
        android:paddingBottom="@dimen/activity_padding_vertical"
        android:background="@drawable/gradient"
        android:text="Create New Event"
        android:textColor="#FFFFFFFF" />

    <EditText
        android:id="@+id/inputNewEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:layout_below="@id/createNewEventTitle"
        android:hint="01/29/2014"
        android:inputType="text"
        android:textColor="#000000" />
    
    <Button
        android:id="@+id/button_saveNewEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputNewEvent"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:layout_marginTop="@dimen/btn_margin_vertical"
        android:paddingTop="@dimen/activity_padding_vertical"
        android:paddingBottom="@dimen/activity_padding_vertical"
        android:background="@drawable/gradient"
        android:onClick="onButtonClick"
        android:textSize="14dp"
        android:text="Save New Event"
        android:textColor="#FFFFFFFF" />

</LinearLayout>