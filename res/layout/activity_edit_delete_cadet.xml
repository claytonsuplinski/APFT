<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/editDeleteCadetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:layout_marginTop="@dimen/btn_margin_vertical"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="@drawable/gradient"
        android:text="Edit/Delete Cadet"
        android:textColor="#FFFFFFFF" />
    
	<EditText
        android:id="@+id/inputLastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/editDeleteCadetTitle"
        android:hint="Last Name"
        android:inputType="number"
        android:textColor="#00000000" />
	
	<EditText
        android:id="@+id/inputFirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputLastName"
        android:hint="First Name"
        android:inputType="number"
        android:textColor="#00000000" />
	
	<EditText
        android:id="@+id/inputDOB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputFirstName"
        android:hint="DOB 01/01/2014"
        android:inputType="number"
        android:textColor="#00000000" />
	
	<EditText
        android:id="@+id/inputGender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputDOB"
        android:hint="Gender (M/F)"
        android:inputType="number"
        android:textColor="#00000000" />
	
	<Button
        android:id="@+id/button_saveCadet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputGender"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:background="@drawable/gradient"
        android:onClick="onButtonClick"
        android:textSize="12dp"
        android:text="Save Cadet"
        android:textColor="#FFFFFFFF" />
	
	<Button
        android:id="@+id/button_deleteCadet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_saveCadet"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:layout_marginTop="@dimen/btn_margin_vertical"
        android:background="@drawable/gradient"
        android:onClick="onButtonClick"
        android:textSize="12dp"
        android:text="Delete Cadet"
        android:textColor="#FFFFFFFF" />
	

</LinearLayout>
