<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/inputNewCadetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:layout_marginTop="@dimen/btn_margin_vertical"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="@drawable/gradient"
        android:text="Input New Cadet"
        android:textColor="#FFFFFFFF" />
    
	<EditText
        android:id="@+id/inputLastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputNewCadetTitle"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="#000000" />
	
	<EditText
        android:id="@+id/inputFirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputLastName"
        android:hint="First Name"
        android:inputType="text"
        android:textColor="#000000" />
	
	<EditText
        android:id="@+id/inputDOB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputFirstName"
        android:hint="DOB 01/01/2014"
        android:inputType="text"
        android:textColor="#000000" />
	
	<EditText
        android:id="@+id/inputGender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_margin_vertical"
        android:background="#FFFFFFFF"
        android:layout_below="@id/inputDOB"
        android:hint="Gender (M/F)"
        android:inputType="text"
        android:textColor="#000000" />
	
	<Button
        android:id="@+id/button_saveCadet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputNewEvent"
        android:layout_marginLeft="@dimen/btn_margin_horizontal"
        android:layout_marginRight="@dimen/btn_margin_horizontal"
        android:layout_marginTop="@dimen/btn_margin_vertical"
        android:background="@drawable/gradient"
        android:onClick="onButtonClick"
        android:textSize="14dp"
        android:text="Save Cadet"
        android:textColor="#FFFFFFFF" />
	

</LinearLayout>
